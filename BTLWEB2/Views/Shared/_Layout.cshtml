    <style>
        .login {
            font-family: "Rokkitt", Georgia, serif;
            font-size: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 15px;
            padding: 5px 10px;
            color: #88c8bc;
            font-weight: bold;
        }

        .userLogin {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .haveUser {
            display: flex;
            align-items: center;
            color: black;
            font-family: "Rokkitt", Georgia, serif;
            font-size: 20px;
            margin-left: 30px;
            cursor: pointer;
            position: relative;
        }

            .haveUser i {
                padding-right: 5px;
            }

        .text-danger {
            color: red;
        }

        .userSelect {
            position: absolute;
            top: 30px;
            display: none;
            background: white;
            border-radius: 5px;
            width: 140px;
            align-items: center;
        }

        .haveUser:hover ~ .userSelect {
            display: flex;
        }

        .userSelect:hover {
            display: flex;
        }

        .userSelect ul {
            margin: 0;
            padding: 10px 4px;
        }
    </style>
</head>
<body>

    <div class="colorlib-loader"></div>

    <div id="page">
        @Html.Partial("Header")
        @RenderBody()
        @Html.Partial("Footer")

    </div>


    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="ion-ios-arrow-up"></i></a>
    </div>


    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/aos.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/google_map.js"></script>
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/Scripts/jquery.animateNumber.min.js"></script>
    <script src="~/Scripts/jquery.countTo.js"></script>
    <script src="~/Scripts/jquery.easing.1.3.js"></script>
    <script src="~/Scripts/jquery.flexslider-min.js"></script>
    <script src="~/Scripts/jquery.magnific-popup.min.js"></script>
    <script src="~/Scripts/jquery.stellar.min.js"></script>
    <script src="~/Scripts/jquery.waypoints.min.js"></script>
    <script src="~/Scripts/magnific-popup-options.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/respond.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script>
        $('input[name=quantity]').change(function (e) {
            const valQuan = e.target.value
            const id = $(this).attr('data-id');
            console.log(id);
            fetch(`/Cart/Update_Quantity_Cart/${id}/${valQuan}`, {
                method: "POST",
                
            })
                .then(function (response) {
                    const data = response.json();
                    window.location.reload();
                  
                })  
                
        });
        
    </script>
</body>

</html>

